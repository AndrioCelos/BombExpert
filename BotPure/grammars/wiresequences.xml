<grammar version='1.0' xml:lang='en-AU' root='root' xmlns='http://www.w3.org/2001/06/grammar'>
	<rule id='root'>
		<one-of>
			<item><ruleref uri='bomb.xml'/></item>
			<item>
				<one-of>
					<item> new </item>
					<item> next </item>
					<item> reset </item>
				</one-of>
				<one-of>
					<item> set </item>
					<item> sequence </item>
				</one-of>
			</item>
			<item>
				<item><ruleref uri='#wireflags'/></item>
				<item repeat='0-2'>
					<one-of>
						<item> then </item>
						<item> next </item>
					</one-of>
					<ruleref uri='#wireflags'/>
				</item>
			</item>
		</one-of>
	</rule>
	<rule id='wireflags'>
		<one-of>
			<item>
				<ruleref uri='#colour'/>
				<item repeat='0-1'> to </item>
				<ruleref uri='#letter'/>
			</item>
			<item>
				<ruleref uri='#letter'/>
				<ruleref uri='#colour'/>
			</item>
		</one-of>
	</rule>
	<rule id='colour'>
		<one-of>
			<item> red </item>
			<item> blue </item>
			<item> black </item>
		</one-of>
	</rule>
	<rule id='letter'>
		<one-of>
			<item> a </item>
			<item> alfa </item>
			<item> b </item>
			<item> bravo </item>
			<item> c </item>
			<item> charlie </item>
		</one-of>
	</rule>
</grammar>
