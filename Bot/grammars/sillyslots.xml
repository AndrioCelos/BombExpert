<grammar version='1.0' xml:lang='en-gb' root='root' xmlns='http://www.w3.org/2001/06/grammar'>
	<rule id='root'>
		<one-of>
			<item><ruleref uri='bomb.xml'/></item>
			<item><ruleref uri='#keyword'/> <ruleref uri='#colour'/> <ruleref uri='#symbol'/> <ruleref uri='#colour'/> <ruleref uri='#symbol'/> <ruleref uri='#colour'/> <ruleref uri='#symbol'/></item>
			<item><ruleref uri='#keyword'/> <ruleref uri='#colour'/> <ruleref uri='#colour'/> <ruleref uri='#colour'/> <ruleref uri='#symbol'/> <ruleref uri='#symbol'/> <ruleref uri='#symbol'/></item>
		</one-of>
	</rule>
	<rule id='keyword'>
		<one-of>
			<item> sassy </item>
			<item> silly </item>
			<item> soggy </item>
			<item> sally </item>
			<item> simon </item>
			<item> sausage </item>
			<item> steven </item>
		</one-of>
	</rule>
	<rule id='colour'>
		<one-of>
			<item> red </item>
			<item> green </item>
			<item> blue </item>
		</one-of>
	</rule>
	<rule id='symbol'>
		<one-of>
			<item> bomb </item>
			<item> cherry </item>
			<item> coin </item>
			<item> grape </item>
		</one-of>
	</rule>
</grammar>
