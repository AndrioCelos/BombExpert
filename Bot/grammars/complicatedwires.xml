<grammar version='1.0' xml:lang='en' root='root' xmlns='http://www.w3.org/2001/06/grammar'>
	<rule id='root'>
		<one-of>
			<item><ruleref uri='bomb.xml'/></item>
			<item><ruleref uri='bomb.xml#yesorno'/></item>
			<item><ruleref uri='bomb.xml#number'/></item>
			<item repeat='1-'>
				<one-of>
					<!-- Do not use the word 'white' when describing wires. It sounds too similar to 'light'. -->
					<item> nothing </item>
					<item> red </item>
					<item> blue </item>
					<item> light </item>
					<item> star </item>
					<item> then </item>
					<item> next </item>
				</one-of>
			</item>
		</one-of>
	</rule>
</grammar>
