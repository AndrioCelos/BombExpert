<grammar version='1.0' xml:lang='en-gb' root='root' xmlns='http://www.w3.org/2001/06/grammar'>
	<rule id='root'>
		<one-of>
			<item><ruleref uri='bomb.xml'/></item>
			<item repeat='1-'>
				<one-of>
					<item> dash </item>
					<item> dot </item>
					<item> short </item>
					<item> long </item>
					<item> space </item>
					<item> start </item>
				</one-of>
			</item>
		</one-of>
	</rule>
</grammar>
