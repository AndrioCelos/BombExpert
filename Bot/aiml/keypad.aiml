<?xml version="1.0" encoding="UTF-8"?>
<aiml>
	<topic name='bomb keypad ^'>
		<category>
			<pattern>SelectModule</pattern>
			<template>Describe one of the symbols.</template>
		</category>

		<category>
			<pattern>InitModule</pattern>
			<template>
				<think>
					<condition name='BombKeypadStage'>
						<li value='2'></li>
						<li>
							<set name='BombKeypadTry'>1</set>     <!-- Stage 1: which try we are at; incremented on an unknown description -->
							<set name='BombKeypadAsking'>1</set>  <!-- Stage 1: number of glyph we're asking about. Others: glyph name we're asking about. -->
						</li>
					</condition>
					<set name='KeypadAbsent'>nil</set>
					<set name='BombKeypadAsked'>unknown</set>    <!-- Space-separated list of which glyphs we've asked about -->
					<set name='BombKeypadColumns'>unknown</set>  <!-- Stage 3: Space-separated list of possible column indices -->
					<set name='BombKeypadGlyph1'>unknown</set>   <!-- Glyph specified by the Defuser -->
					<set name='BombKeypadGlyph2'>unknown</set>   <!-- Glyph specified by the Defuser -->
					<set name='BombKeypadGlyph3'>unknown</set>   <!-- Glyph specified by the Defuser -->
					<set name='BombKeypadGlyph4'>unknown</set>   <!-- Glyph specified by the Defuser -->
				</think>
			</template>
		</category>

		<category>
			<pattern>*</pattern>
			<topic>bomb keypad</topic>
			<template>
				<think><set var='valid'><srai>KeypadAppendGlyphDescription <star/></srai></set></think>
				<condition var='valid'>
					<li value='true'>
						<think>
							<!-- Check whether any columns match. -->
							<set var='check'>
								<srai>Solver Keypad CheckKeypad <get name='BombKeypadGlyph1'/> <get name='BombKeypadGlyph2'/> <get name='BombKeypadGlyph3'/> <get name='BombKeypadGlyph4'/></srai>
							</set>
						</think>
						<condition var='check'>
							<li value='false'>
								There seems to be no solution to that description. Please try again.
								<think><srai>new keypad</srai></think>
							</li>
							<li>
								<condition name='BombKeypadAsking'>
									<li value='5'>
										<!-- Got all glyphs, now determine the order to press them. -->
										<think>
											<set name='topic'>bomb keypad order</set>
											<set var='result'>
												<srai>Solver Keypad Keypad <get name='BombKeypadGlyph1'/> <get name='BombKeypadGlyph2'/> <get name='BombKeypadGlyph3'/> <get name='BombKeypadGlyph4'/></srai>
											</set>
										</think>
										<oob>SetGrammar keypadOK</oob>
										<condition var='result'>
											<li value='NoColumn'>
												There seems to be no solution to that description. Please try again.
												<think><srai>new keypad</srai></think>
											</li>
											<li value='MultipleColumns'>
												There seems to be no solution to that description. Please try again.
												<think><srai>new keypad</srai></think>
											</li>
											<li>
												<think><set name='BombKeypadColumn'><get var='result'/></set></think>
												<srai>KeypadOrderRead <get var='result'/></srai>
											</li>
										</condition>
									</li>
									<li>
										<srai>NextSymbolPrompt</srai>
									</li>
								</condition>
							</li>
						</condition>
					</li>
				</condition>
			</template>
		</category>

		<category>
			<pattern>* then *</pattern>
			<topic>bomb keypad</topic>
			<template>
				<think><set var='valid'><srai>KeypadAppendGlyphDescription <star/></srai></set></think>
				<condition var='valid'>
					<li value='true'><srai><star index='2'/></srai></li>
					<li>
						<condition name='BombKeypadTry'>
							<li value='1'>
								<!-- First time: ask them to rephrase. -->
								<think><set name='BombKeypadTry'>2</set></think>
								I do not recognise that description.
							</li>
							<li>
								<!-- Second time: start asking about specific glyphs. -->
								I do not recognise that description. Want to use the yes-no strategy?
							</li>
						</condition>
					</li>
				</condition>
			</template>
		</category>

		<category>
			<pattern>yes</pattern>
			<that>Want to use the yes-no strategy</that>
			<template>
				<think>
					<set name='BombKeypadStage'>2</set>
					<set name='topic'>bomb keypad</set>
				</think>
				<oob>SetGrammar keypadOK</oob>
				<srai>KeypadResult <srai>Solver Keypad Start</srai></srai>
			</template>
		</category>
		<category>
			<pattern>no</pattern>
			<that>Want to use the yes-no strategy</that>
			<template><srai>NextSymbolPrompt</srai></template>
		</category>

		<category>
			<pattern>NextSymbolPrompt</pattern>
			<template>
				<condition name='BombKeypadAsking'>
					<li value='1'>OK. Describe the first symbol.</li>
					<li value='2'>OK. Describe the second symbol.</li>
					<li value='3'>OK. Describe the third symbol.</li>
					<li value='4'>OK. Describe the last symbol.</li>
					<li>OK.</li>
				</condition>
			</template>
		</category>


		<!-- Usage: XGlyphs [rule seed] [n] -->
		<!-- Returns a list of glyphs that appear on exactly n columns. -->
		<category>
			<pattern>XGlyphs 1 1</pattern>
			<template>Copyright FilledStar Omega Pumpkin SquigglyN AT Ae MeltedThree NWithHat Dragon RightC Tracks</template>
		</category>
		<category>
			<pattern>XGlyphs 1 2</pattern>
			<template>HollowStar SmileyFace DoubleK SquidKnife HookN Six Euro QuestionMark Paragraph LeftC Pitchfork Cursive Balloon UpsideDownY BT</template>
		</category>

		<!-- Usage: KeypadAppendGlyphDescription [user description ...] -->
		<category>
			<pattern>KeypadAppendGlyphDescription *</pattern>
			<template>
				<think><set var='glyph'><srai>GetKeypadGlyphName <star/></srai></set></think>
				<condition var='glyph'>
					<li value='unknown'>
						false
					</li>
					<li>
						<think>
							<set><name>BombKeypadDescription<get var='glyph'/></name><star/></set>
							<set><name>BombKeypadGlyph<get name='BombKeypadAsking'/></name><get var='glyph'/></set>
							<set name='BombKeypadAsked'><srai>XAppend <get var='glyph'/> <get name='BombKeypadAsked'/></srai></set>
							<think><set name='BombKeypadAsking'><map name='successor'><get name='BombKeypadAsking'/></map></set></think>
						</think>
						true
					</li>
				</condition>
			</template>
		</category>

		<!-- Usage: KeypadDescribe [glyph] -->
		<!-- Returns a user-friendly description for the specified glyph identifier. -->
		<category>
			<pattern>KeypadDescribe *</pattern>
			<template>
				<condition>
					<name>BombKeypadDescription<star/></name>
					<li value='*'><denormalize><get><name>BombKeypadDescription<star/></name></get></denormalize></li>
					<li><map name='KeypadGlyphDescription'><star/></map></li>
				</condition>
			</template>
		</category>

		<!-- Usage: Solver Keypad Keypad [4 glyphs] -->
		<!-- Returns the glyphs in the order they should be pressed. -->
		<category>
			<pattern>SolverFallback Keypad <set>number</set> Keypad * * * *</pattern>
			<template>
				<think>
					<!-- Find which column contains these glyphs. -->
					<set var='glyphs'><star index='2'/> <star index='3'/> <star index='4'/> <star index='5'/></set>
					<set var='possible'>1 2 3 4 5 6</set>
					<condition var='glyphs'>
						<li value='nil'></li>
						<li>
							<set var='glyph'><srai>XFirst <get var='glyphs'/></srai></set>
							<set var='glyphs'><srai>XRest <get var='glyphs'/></srai></set>
							<!-- Keep each column that has this glyph. -->
							<set var='toCheck'><get var='possible'/></set>
							<set var='numberPossible'>0</set>
							<set var='possible'>nil</set>
							<condition var='toCheck'>
								<li value='nil'></li>
								<li>
									<set var='column'><srai>XFirst <get var='toCheck'/></srai></set>
									<set var='contains'><srai>XContains <get var='glyph'/> XS <map><name>KeypadColumns<star/></name><get var='column'/></map></srai></set>
									<set var='toCheck'><srai>XRest <get var='toCheck'/></srai></set>
									<condition var='contains' value='true'>
										<set var='numberPossible'><map name='successor'><get var='numberPossible'/></map></set>
										<set var='possible'><srai>XAppend <get var='column'/> <get var='possible'/></srai></set>
									</condition>
									<loop/>
								</li>
							</condition>
							<loop/>
						</li>
					</condition>
					<condition var='numberPossible'>
						<li value='0'><set var='result'>NoColumn</set></li>
						<li value='1'>
							<!-- Return the glyphs in the correct order. -->
							<set var='columnGlyphs'><map><name>KeypadColumns<star/></name><get var='possible'/></map></set>
							<set var='result'>nil</set>
							<condition var='columnGlyphs'>
								<li value='nil'></li>
								<li>
									<set var='glyph'><srai>XFirst <get var='columnGlyphs'/></srai></set>
									<set var='columnGlyphs'><srai>XRest <get var='columnGlyphs'/></srai></set>
									<condition var='glyph'>
										<li><value><star index='2'/></value><set var='result'><srai>XAppend <get var='glyph'/> <get var='result'/></srai></set></li>
										<li><value><star index='3'/></value><set var='result'><srai>XAppend <get var='glyph'/> <get var='result'/></srai></set></li>
										<li><value><star index='4'/></value><set var='result'><srai>XAppend <get var='glyph'/> <get var='result'/></srai></set></li>
										<li><value><star index='5'/></value><set var='result'><srai>XAppend <get var='glyph'/> <get var='result'/></srai></set></li>
									</condition>
									<loop/>
								</li>
							</condition>
						</li>
						<li><set var='result'>MultipleColumns</set></li>
					</condition>
				</think>
				<get var='result'/>
			</template>
		</category>

		<!-- Usage: Solver Keypad CheckKeypad [glyphs ...] -->
		<!-- Returns true if there is a matching column, or false otherwise. -->
		<category>
			<pattern>SolverFallback Keypad <set>number</set> CheckKeypad *</pattern>
			<template>
				<think>
					<set var='result'>true</set>
					<set var='glyphs'><star index='2'/></set>
					<set var='possible'>1 2 3 4 5 6</set>
					<condition var='glyphs'>
						<li value='nil'></li>
						<li>
							<set var='glyph'><srai>XFirst <get var='glyphs'/></srai></set>
							<set var='glyphs'><srai>XRest <get var='glyphs'/></srai></set>
							<condition var='glyph'>
								<li value='unknown'></li>
								<li>
									<!-- Keep each column that has this glyph. -->
									<set var='toCheck'><get var='possible'/></set>
									<set var='numberPossible'>0</set>
									<set var='possible'>nil</set>
									<condition var='toCheck'>
										<li value='nil'></li>
										<li>
											<set var='column'><srai>XFirst <get var='toCheck'/></srai></set>
											<set var='contains'><srai>XContains <get var='glyph'/> XS <map><name>KeypadColumns<star/></name><get var='column'/></map></srai></set>
											<set var='toCheck'><srai>XRest <get var='toCheck'/></srai></set>
											<condition var='contains' value='true'>
												<set var='numberPossible'><map name='successor'><get var='numberPossible'/></map></set>
												<set var='possible'><srai>XAppend <get var='column'/> <get var='possible'/></srai></set>
											</condition>
											<loop/>
										</li>
									</condition>
								</li>
							</condition>
							<condition var='numberPossible' value='0'>
								<set var='result'>false</set>
								<set var='glyphs'>nil</set>
							</condition>
							<loop/>
						</li>
					</condition>
				</think>
				<get var='result'/>
			</template>
		</category>

		<!-- Usage: KeypadOrderRead -->
		<!-- Tells the Defuser the order to press the buttons. -->
		<category>
			<pattern>KeypadOrderRead *</pattern>
			<template>
				<think><set var='column'><star/></set></think>
				Press in this order:
				<condition var='column'>
					<li value='nil'></li>
					<li>
						<think>
							<set var='absent'><srai>XContains <first><get var='column'/></first> XS <get name='KeypadAbsent'/></srai></set>
						</think>
						<condition var='absent' value='false'>
							<condition var='any' value='true'>,</condition>
							<map name='KeypadGlyphDescription'><first><get var='column'/></first></map>
							<think><set var='any'>true</set></think>
						</condition>
						<think><set var='column'><rest><get var='column'/></rest></set></think>
						<loop/>
					</li>
				</condition>.
			</template>
		</category>

		<category>
			<pattern>SolverFallback Keypad <set>number</set> Start ^</pattern>
			<template>
				<think><set name='BombKeypadToAsk'><srai>XGlyphs <get name='RuleSeed'/> 2</srai></set></think>
				<srai>KeypadPrompt</srai>
			</template>
		</category>

		<category>
			<pattern>SolverFallback Keypad <set>number</set> GlyphPresent false *</pattern>
			<template><srai>KeypadPrompt</srai></template>
		</category>

		<category>
			<pattern>SolverFallback Keypad <set>number</set> GlyphPresent true *</pattern>
			<template>
				<think>
					<condition name='BombKeypadColumns'>
						<li value='unknown'>
							<!-- Stage 2: find possible columns from the glyph asked about. -->
							<set var='columnIndex'>1</set>
							<set name='BombKeypadColumns'>nil</set>
							<set var='numberPossible'>0</set>
							<condition var='columnIndex'>
								<li value='7'></li>
								<li>
									<set var='contains'><srai>XContains <star index='2'/> XS <map><name>KeypadColumns<star/></name><get var='columnIndex'/></map></srai></set>
									<condition var='contains' value='true'>
										<set name='BombKeypadColumns'><srai>XAppend <get var='columnIndex'/> <get name='BombKeypadColumns'/></srai></set>
										<set var='numberPossible'><map name='successor'><get var='numberPossible'/></map></set>
									</condition>
									<set var='columnIndex'><map name='successor'><get var='columnIndex'/></map></set>
									<loop/>
								</li>
							</condition>
							<condition var='numberPossible'>
								<li value='1'><set var='result'>Tell <map><name>KeypadColumns<star/></name><get name='BombKeypadColumns'/></map></set></li>
								<li>
									<!-- Two possible columns: ask about other glyphs in exactly one of those columns. -->
									<set name='BombKeypadToAsk'>nil</set>
									<set var='column1'><map><name>KeypadColumns<star/></name><srai>XFirst <get name='BombKeypadColumns'/></srai></map></set>
									<set var='column2'><map><name>KeypadColumns<star/></name><srai>XRest <get name='BombKeypadColumns'/></srai></map></set>

									<set var='column'><get var='column1'/></set>
									<condition var='column'>
										<li value='nil'></li>
										<li>
											<set var='glyph'><srai>XFirst <get var='column'/></srai></set>
											<set var='column'><srai>XRest <get var='column'/></srai></set>
											<set var='contains'><srai>XContains <get var='glyph'/> XS <get var='column2'/></srai></set>
											<condition var='contains' value='false'>
												<set name='BombKeypadToAsk'><srai>XAppend <get var='glyph'/> <get name='BombKeypadToAsk'/></srai></set>
											</condition>
											<loop/>
										</li>
									</condition>

									<set var='column'><get var='column2'/></set>
									<condition var='column'>
										<li value='nil'></li>
										<li>
											<set var='glyph'><srai>XFirst <get var='column'/></srai></set>
											<set var='column'><srai>XRest <get var='column'/></srai></set>
											<set var='contains'><srai>XContains <get var='glyph'/> XS <get var='column1'/></srai></set>
											<condition var='contains' value='false'>
												<set name='BombKeypadToAsk'><srai>XAppend <get var='glyph'/> <get name='BombKeypadToAsk'/></srai></set>
											</condition>
											<loop/>
										</li>
									</condition>

									<set var='result'><srai>KeypadPrompt</srai></set>
								</li>
							</condition>
						</li>
						<li>
							<!-- Stage 3: Which of the two columns contains this glyph? -->
							<set var='glyph'><srai>XFirst <get name='BombKeypadToAsk'/></srai></set>
							<set name='BombKeypadToAsk'><srai>XRest <get name='BombKeypadToAsk'/></srai></set>

							<set var='columnIndex1'><srai>XFirst <get name='BombKeypadColumns'/></srai></set>
							<set var='columnIndex2'><srai>XRest <get name='BombKeypadColumns'/></srai></set>

							<set var='contains'><srai>XContains <star index='2'/> XS <map><name>KeypadColumns<star/></name><get var='columnIndex1'/></map></srai></set>
							<condition var='contains'>
								<li value='true'><set var='result'>Tell <map><name>KeypadColumns<star/></name><get var='columnIndex1'/></map></set></li>
								<li><set var='result'>Tell <map><name>KeypadColumns<star/></name><get var='columnIndex2'/></map></set></li>
							</condition>
						</li>
					</condition>
				</think>
				<get var='result'/>
			</template>
		</category>

		<!-- Usage: KeypadPrompt -->
		<!-- Asks the Defuser whether a glyph is on the keypad. Also sets the BombKeypadAsking predicate to this glyph. -->
		<category>
			<pattern>KeypadPrompt</pattern>
			<template>
				<think>
					<condition name='BombKeypadColumns'>
						<li value='unknown'>
							<!-- Stage 2: Start by asking about glyphs that are in two columns.
								If they say yes, we know that the correct column must be one of those columns. -->
							<condition name='BombKeypadToAsk' value='nil'>
								<set name='BombKeypadToAsk'><srai>XGlyphs <get name='RuleSeed'/> 1</srai></set>
							</condition>
							<set var='glyph'><srai>XFirst <get name='BombKeypadToAsk'/></srai></set>
							<set name='BombKeypadToAsk'><srai>XRest <get name='BombKeypadToAsk'/></srai></set>
						</li>
						<li>
							<!-- Stage 3: Try to figure out which column is the correct one by finding a glyph only in one. -->
							<set var='glyph'><srai>XFirst <get name='BombKeypadToAsk'/></srai></set>
							<set name='BombKeypadToAsk'><srai>XRest <get name='BombKeypadToAsk'/></srai></set>
						</li>
					</condition>
					<set var='result'>
						<condition var='glyph'>
							<li value='nil'>unknown</li>
							<li>Ask <get var='glyph'/></li>
						</condition>
					</set>
				</think>
				<get var='result'/>
			</template>
		</category>

		<category>
			<pattern>KeypadResult Ask *</pattern>
			<template>
				Is there a <map name='KeypadGlyphDescription'><set name='BombKeypadAsking'><star/></set></map>?
			</template>
		</category>
		<category>
			<pattern>KeypadResult Tell *</pattern>
			<template>
				<think>
					<set name='BombKeypadColumn'><star/></set>
					<set name='topic'>bomb keypad column</set>
				</think>
				<srai>KeypadOrderRead <star/></srai>
			</template>
		</category>

		<category>
			<pattern><set>YesOrNo</set></pattern>
			<that>^ Is there a *</that>
			<template>
				<think>
					<set var='answer'><star/></set>
					<condition var='answer' value='no'>
						<set name='KeypadAbsent'><srai>XAppend <get name='BombKeypadAsking'/> <get name='KeypadAbsent'/></srai></set>
					</condition>
				</think>
				<srai>KeypadResult <srai>Solver Keypad GlyphPresent <map name='ParseBoolean'><star/></map> <get name='BombKeypadAsking'/></srai></srai>
			</template>
		</category>

		<!-- Usage: TellKeypadColumnItem -->
		<!-- Tells the user to press the next item on the column. -->
		<category>
			<pattern>TellKeypadColumnItem <set>number</set></pattern>
			<template>
				Press the
				<map name='KeypadGlyphDescription'><srai>XItem <get name='BombKeypadIndex'/> XS <get name='BombKeypadColumn'/></srai></map>,
				if it is there. Then say 'OK'.
			</template>
		</category>

		<category>
			<pattern>OK ^</pattern>
			<topic>bomb keypad column</topic>
			<template>
				<condition name='BombKeypadIndex'>
					<li value='7'>The keypad should be finished now.</li>
					<li><srai>TellKeypadColumnItem <set name='BombKeypadIndex'><map name='successor'><get name='BombKeypadIndex'/></map></set></srai></li>
				</condition>
			</template>
		</category>
	</topic>
</aiml>
